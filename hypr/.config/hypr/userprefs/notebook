general {
    gaps_in = 1
    gaps_out = 2
    border_size = 1
}


exec-once = setxkbmap us -variant intl
exec-once = setxkbmap -option lv3:ralt_switch us -variant intl

input {
    
    kb_layout = br
    kb_variant =
    kb_model =
    kb_options = compose:ralt
    touchpad {
        natural_scroll = false # ou false, como preferir
        disable_while_typing = false # Esta é a linha que resolve o problema
    }
}


