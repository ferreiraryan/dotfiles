general {
    gaps_in = 2
    gaps_out = 4
    border_size = 2
}


exec-once = setxkbmap us -variant intl
exec-once = setxkbmap -option lv3:ralt_switch us -variant intl

exec-once = dbus-update-activation-environment --systemd WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once = systemctl --user import-environment WAYLAND_DISPLAY XDG_CURRENT_DESKTOP
exec-once = /usr/lib/xdg-desktop-portal # ou /usr/libexec/xdg-desktop-portal


